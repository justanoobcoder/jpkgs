name="libgpg-error"
version="1.55"
url="https://www.gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2"
md5="0430e56fd67d0751b83fc18b0f56a084"

build() {
    ./configure --prefix=/usr &&
    make
}

check() {
    make check
}

package() {
    make install DESTDIR=$DESTDIR &&
    mkdir -pv $DESTDIR/usr/share/doc/libgpg-error-$version
    install -v -m644 -D README $DESTDIR/usr/share/doc/libgpg-error-$version/README
}
