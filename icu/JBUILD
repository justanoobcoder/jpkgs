name="icu"
version="77.1"
url="https://github.com/unicode-org/icu/releases/download/release-77-1/icu4c-77_1-src.tgz"
md5="bc0132b4c43db8455d2446c3bae58898"

prepare() {
    case $(uname -m) in
      i?86) sed -e "s/U_PLATFORM_IS_LINUX_BASED/__X86_64__ \&\& &/" \
                -i source/test/intltest/ustrtest.cpp ;;
    esac
}

build() {
    cd source                 &&
    ./configure --prefix=/usr &&
    make
}

package() {
    make install DESTDIR=$DESTDIR
}
