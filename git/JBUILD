name="git"
version="2.50.1"
url="https://www.kernel.org/pub/software/scm/git/git-$version.tar.xz"
md5="2cb96fae126d66f8ff23a68f8dd5d748"
deps=("curl")

build() {
    ./configure --prefix=/usr \
            --with-gitconfig=/etc/gitconfig \
            --with-python=python3 &&
    make
}

package() {
    make perllibdir=/usr/lib/perl5/5.42/site_perl install DESTDIR=$DESTDIR
}
