name="fastfetch"
version="2.58.0"
url="https://github.com/fastfetch-cli/fastfetch/archive/refs/tags/$version.tar.gz"
sha256="95c6bb522d455ed0bd35cc0f7f3a44a70663c0e81d03fe9bfe6ffa5ea19c2b1d"

build() {
    mkdir -p build
    cd build
    cmake ..
    cmake --build . --target fastfetch
}

package() {
    install -Dm 755 fastfetch $DESTDIR/usr/bin/fastfetch
    install -Dm 644 fastfetch.1 $DESTDIR/usr/share/man/man.1/fastfetch.1
}
