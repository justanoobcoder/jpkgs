name="libpsl"
version="0.21.5"
url="https://github.com/rockdaboot/$name/releases/download/$version/$name-$version.tar.gz"
deps=("libunistring" "libidn2")

build() {
    mkdir build &&
    cd    build &&

    meson setup --prefix=/usr --buildtype=release &&

    ninja
}

package() {
    DESTDIR=$DESTDIR ninja install
}
