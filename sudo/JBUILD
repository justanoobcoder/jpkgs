name="sudo"
version="1.9.17p2"
url="https://www.sudo.ws/dist/sudo-$version.tar.gz"
md5="dcbf46f739ae06b076e1a11cbb271a10"
deps=("linux-pam" "openldap")

build() {
    ./configure --prefix=/usr         \
                --libexecdir=/usr/lib \
                --with-secure-path    \
                --with-env-editor     \
                --docdir=/usr/share/doc/sudo-$version \
                --with-passprompt="[sudo] password for %p: " &&
    make
}

package() {
    make install DESTDIR=$DESTDIR

    mkdir -pv $DESTDIR/etc/sudoers.d
    cat > $DESTDIR/etc/sudoers.d/00-sudo << "EOF"
Defaults secure_path="/usr/sbin:/usr/bin:/usr/local/bin"
%wheel ALL=(ALL) ALL
EOF

    mkdir -pv $DESTDIR/etc/pam.d
    cat > $DESTDIR/etc/pam.d/sudo << "EOF"
# Begin /etc/pam.d/sudo

# include the default auth settings
auth      include     system-auth

# include the default account settings
account   include     system-account

# Set default environment variables for the service user
session   required    pam_env.so

# include system session defaults
session   include     system-session

# End /etc/pam.d/sudo
EOF
    chmod 644 $DESTDIR/etc/pam.d/sudo
}
