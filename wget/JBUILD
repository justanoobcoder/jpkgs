name="wget"
version="1.25.0"
url="https://ftp.gnu.org/gnu/wget/wget-$version.tar.gz"
md5="c70ba58b36f944e8ba1d655ace552881"
deps=("libpsl" "make-ca")

build() {
    ./configure --prefix=/usr      \
                --sysconfdir=/etc  \
                --with-ssl=openssl &&
    make
}

package() {
    make install DESTDIR=$DESTDIR
}
