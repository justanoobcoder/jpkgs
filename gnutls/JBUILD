name="gnutls"
version="3.8.10"
url="https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/gnutls-$version.tar.xz"
md5="803c6f5c9cbe55c64fbb46690d329a77"
deps=("nettle" "make-ca" "libunistring" "libtasn1" "p11-kit")

build() {
    ./configure --prefix=/usr \
                --docdir=/usr/share/doc/gnutls-3.8.10 \
                --with-default-trust-store-pkcs11="pkcs11:" &&
    make
}

check() {
    make check
}

package() {
    make install DESTDIR=$DESTDIR
}
