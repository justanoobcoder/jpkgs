name="pinentry"
version="1.3.2"
url="https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-$version.tar.bz2"
md5="5247373d2e9ac73b1ea662bd270e58a4"
deps=("libassuan" "libgpg-error")

prepare() {
    sed -i "/FLTK 1/s/3/4/" configure   &&
    sed -i '14456 s/1.3/1.4/' configure
}

build() {
    ./configure --prefix=/usr          \
                --enable-pinentry-tty  &&
    make
}

package() {
    make install DESTDIR=$DESTDIR
}
