name="nettle"
version="3.10.2"
url="https://ftp.gnu.org/gnu/nettle/nettle-$version.tar.gz"
md5="b28bcbf6f045ff007940a9401673600d"

build() {
    ./configure --prefix=/usr --disable-static &&
    make
}

package() {
    make install DESTDIR=$DESTDIR &&
    chmod   -v   755 $DESTDIR/usr/lib/lib{hogweed,nettle}.so &&
    install -v -m755 -d $DESTDIR/usr/share/doc/nettle-3.10.2 &&
    install -v -m644 nettle.{html,pdf} $DESTDIR/usr/share/doc/nettle-3.10.2
}
